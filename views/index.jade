extends layout

mixin floor(f)
  tr(class="userFloor")
    td #{f.story}
    td
      a(href="floor/#{f.name}") #{f.name}
    td.removeFloor

block content
  style.
    td:first-child { width:5ex; text-align:right; padding-right: 1ex; }
    tr:nth-child(2) > td:last-child { text-align: right; }
  h1= title
  p Hello,&nbsp;
    input#username(type="text", value="#{username}")
    span &nbsp;
    span#ajaxresult
  p
    a(href="/missions") Missions
  table.floors(style="width:100%;")
    tr
      td(colspan="3")
        select#newfloor(style="width:100%;")
          option
          each floors, category in newFloors
            optgroup(label="#{category}")
              each f in floors
                option(value="#{f}")= f
    each f in userFloors
      +floor(f)
